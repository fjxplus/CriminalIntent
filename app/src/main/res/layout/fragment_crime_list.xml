<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/noCrimeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/noCrimeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/no_crime"
            android:textSize="30sp" />

        <Button
            android:id="@+id/newCrime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/noCrimeText"
            android:layout_centerHorizontal="true"
            android:text="@string/new_crime" />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/crime_recycle_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/noCrimeLayout">

    </androidx.recyclerview.widget.RecyclerView>
</RelativeLayout>
